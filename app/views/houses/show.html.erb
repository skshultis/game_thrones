<p>
  <strong>Name:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>location:</strong>
  <%= @house.location %>
</p>
<ul>
  <% @characters.each do |character| %>
  <p><%= link_to character.name, character_path(character.house) %></p>
  <% end %>
</ul>
<p><%= link_to "edit this house", edit_house_path(@house) %></p>
<p><%= link_to 'delete this house', house_path(@house), method: :delete, data:{confirm: "Are you sure you want to delete this house?"} %></p>

<p><%= link_to 'back', houses_path %></p>
